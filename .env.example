# Use relative path for development (Next.js proxies to backend)
# For production, this can be overridden with the full URL
NEXT_PUBLIC_BASE_URL=/api

# Optional: Host for server-side API requests (defaults to http://localhost:3000)
# Only needed if your API is on a different host/port during development
# NEXT_PUBLIC_API_HOST=http://localhost:3000

# Backend API URL for server-side proxy route
# This is the actual backend URL that the Next.js API proxy connects to
# Production default: https://derakht.darkube.app/api
BACKEND_API_URL=https://derakht.darkube.app/api
